pipeline {
    agent any
 
    stages {
         stage("clonign the coee"){
            steps{
            git branch: 'main',url:'https://github.com/mohansourcecode/python1.git '
    
            }
        }
        stage("cloning the testcases"){
            steps{
                git branch: 'main',url:"https://github.com/mohantest14242/python-testing.git"
    
            }
        }
        stage("performing the testcases "){
            steps{
                sh'''
                ls  -l
                pytest tests'''
            }
        }
        stage("perform the unit testing"){
            steps{
                sh '''
                pytest python-testing/unit_test'''
            }
        }
        stage("perform the linting the code"){
            steps{
                sh '''
             flake8 src/main.py'''
            }
        }
        stage("docker stages"){
            steps{
                sh '''
                sudo docker pull nginx 
                sudo docker images
                ls -l  '''
            }
        }
        stage("docker build stage"){
            steps{
                sh'''
                sudo docker build -t mohan:1.0 .'''
            }
        }
        stage("starting the docker container"){
            steps{
                sh '''
                sudo docker run -d  -p 8000:8000 mohan:1.0
                '''
            }
        }

    }
}

